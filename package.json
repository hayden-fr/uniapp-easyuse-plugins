{
  "name": "uniapp-easyuse-plugins",
  "version": "0.0.0",
  "description": "Using plugins to add functionality makes Uniapp easier to use.",
  "type": "module",
  "keywords": [
    "uniapp",
    "plugins",
    "easyuse"
  ],
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vitest",
    "build": "tsup src/*.ts --format cjs,esm --dts --splitting --clean",
    "test": "vitest --coverage"
  },
  "author": "Hayden <hayden.mike.zhang@gmail.com>",
  "packageManager": "pnpm@10.15.1",
  "devDependencies": {
    "@types/node": "^24.3.1",
    "@vitest/coverage-v8": "^3.2.4",
    "tsup": "^8.5.0",
    "typescript": "^5.9.2",
    "vite": "^7.1.5",
    "vitest": "^3.2.4"
  },
  "peerDependencies": {
    "vite": "^7.1.5"
  }
}
